{
  "manifest_version": 2,
  "default_locale": "zh_CN",
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "2.0.7",
  "options_ui": {
    "page": "./src/options.html"
  },
  "icons": {
    "256": "icon/icon.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icon/icon-64.png",
    "default_popup": "./src/popup.html"
  },
  "background": {
    "scripts": ["./src/background.ts"],
    "persistent": false
  },
  "permissions": [
    "alarms",
    "cookies",
    "notifications",
    "storage",
    "*://*.douyu.com/*",
    "*://*.zhanqi.tv/*",
    "*://*.huya.com/*",
    "*://*.bilibili.com/*",
    "*://*.twitch.tv/*",
    "*://*.huomaotv.cn/*",
    "*://*.huomao.com/*",
    "*://*.longzhu.com/*",
    "*://*.163.com/*",
    "*://egame.qq.com/*",
    "*://*.openrec.tv/*",
    "*://*.douyucdn.cn/*",
    "*://*.pdim.gs/*",
    "*://*.hdslb.com/*",
    "*://*.plures.net/*",
    "*://*.dwstatic.com/*",
    "*://*.jtvnw.net/*",
    "*://*.nimg.jp/*",
    "*://*.myqcloud.com/*",
    "*://*.qpic.cn/*"
  ]
}